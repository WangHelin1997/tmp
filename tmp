import random

def random_values_sum_to_1(n):
    # Generate n-1 random numbers between 0 and 1
    rand_nums = sorted(random.random() for _ in range(n - 1))
    
    # Calculate differences between consecutive numbers
    values = [rand_nums[0]] + [rand_nums[i] - rand_nums[i - 1] for i in range(1, n - 1)] + [1 - rand_nums[-1]]
    
    return values

# Example: Generate 5 random values that sum to 1
n = 5
values = random_values_sum_to_1(n)
print(values)
print("Sum:", sum(values))
