def read_files(data_dir):
    
    with open(data_dir, mode='r', newline='') as file:
        reader = csv.reader(file)
        data_ = list(reader)
    pred_paths = [data[0] for data in data_]
    source_paths = [data[1] for data in data_]
    mixture_paths = [data[2] for data in data_]
    enroll_paths = [data[3] for data in data_]
    
    return pred_paths, source_paths, mixture_paths, enroll_paths
